{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build all files clang",
            "command": "C:/msys64/mingw64/bin/clang++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-DGLEW_STATIC",
                "-std=c++20",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/bin/app.exe",
                "-I${workspaceFolder}/include",
                "-LC:/libraries_cpp/glfw-3.4.bin.WIN64/lib-mingw-w64",
                "-LC:/libraries_cpp/glew-2.1.0/lib/Release/x64",
                "-l:libglfw3.a",
                "-l:libgdi32.a",
                "-lglew32s",
                "-lopengl32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build"
        },
    ],
    "version": "2.0.0"
}